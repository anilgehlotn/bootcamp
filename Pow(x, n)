class Solution {
    public double myPow(double x, int n) {
        long power = n;

        if (power < 0) {
            return 1 / pow(x, -power);
        } else {
            return pow(x, power);
        }
    }

    private double pow(double x, long n) {
        if (n == 0) {
            return 1;
        }

        double half = pow(x, n / 2);

        if (n % 2 == 0) {
            return half * half;
        } else {
            return half * half * x;
        }
    }
}
